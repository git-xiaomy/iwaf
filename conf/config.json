{
    "enabled": true,
    "log_level": "info",
    "action": "block",
    "ip_whitelist": [
        "127.0.0.1",
        "::1"
    ],
    "ip_blacklist": [],
    "rate_limit": {
        "enabled": true,
        "requests_per_minute": 120,
        "burst": 20
    },
    "sql_injection": {
        "enabled": true,
        "patterns": [
            "union.*select",
            "select.*from",
            "insert.*into",
            "delete.*from",
            "update.*set",
            "drop.*table",
            "'.*or.*'.*=.*'",
            "1.*=.*1",
            "sleep\\(",
            "benchmark\\(",
            "load_file\\(",
            "outfile.*into",
            "@@version",
            "information_schema",
            "concat\\(",
            "group_concat\\(",
            "char\\(",
            "ascii\\(",
            "substring\\(",
            "length\\(",
            "version\\(",
            "user\\(",
            "database\\(",
            "schema\\("
        ]
    },
    "xss_protection": {
        "enabled": true,
        "patterns": [
            "<script[^>]*>.*?</script>",
            "javascript:",
            "onload\\s*=",
            "onerror\\s*=",
            "onclick\\s*=",
            "onmouseover\\s*=",
            "onmouseout\\s*=",
            "onfocus\\s*=",
            "onblur\\s*=",
            "onchange\\s*=",
            "onsubmit\\s*=",
            "<iframe[^>]*>",
            "<object[^>]*>",
            "<embed[^>]*>",
            "eval\\s*\\(",
            "expression\\s*\\(",
            "vbscript:",
            "activexobject",
            "document\\.cookie",
            "document\\.write",
            "window\\.location",
            "fromcharcode",
            "alert\\s*\\(",
            "confirm\\s*\\(",
            "prompt\\s*\\("
        ]
    },
    "path_traversal": {
        "enabled": true,
        "patterns": [
            "\\.\\./",
            "\\.\\.\\\\",
            "/etc/passwd",
            "/etc/shadow",
            "/etc/hosts",
            "/proc/version",
            "/proc/self/environ",
            "\\\\windows\\\\",
            "\\\\winnt\\\\",
            "cmd\\.exe",
            "powershell\\.exe",
            "net\\.exe",
            "at\\.exe",
            "attrib\\.exe",
            "cacls\\.exe",
            "debug\\.exe",
            "ftp\\.exe",
            "ping\\.exe",
            "systeminfo\\.exe",
            "taskkill\\.exe",
            "sc\\.exe",
            "shutdown\\.exe"
        ]
    },
    "user_agent": {
        "enabled": true,
        "blocked_agents": [
            "sqlmap",
            "nmap",
            "nikto",
            "w3af",
            "acunetix",
            "nessus",
            "openvas",
            "vega",
            "grabber",
            "paros",
            "webscarab",
            "burpsuite",
            "dirbuster",
            "dirb",
            "wfuzz",
            "httprint",
            "whatweb",
            "scan",
            "spider",
            "bot.*bad",
            ".*scanner.*",
            ".*exploit.*",
            ".*attack.*",
            ".*inject.*",
            "curl.*",
            "wget.*",
            "libwww",
            "python-requests",
            "python-urllib",
            "go-http-client"
        ]
    },
    "request_limits": {
        "max_body_size": 10485760,
        "max_uri_length": 2048,
        "max_header_size": 8192,
        "max_headers_count": 50
    },
    "file_extension": {
        "enabled": true,
        "blocked_extensions": [
            "php",
            "asp",
            "aspx",
            "jsp",
            "exe",
            "bat",
            "cmd",
            "sh",
            "pl",
            "py",
            "rb",
            "jar",
            "war",
            "class",
            "vbs",
            "ps1",
            "scr",
            "com",
            "pif"
        ]
    },
    "content_type_filter": {
        "enabled": true,
        "allowed_types": [
            "text/html",
            "text/css",
            "text/javascript",
            "text/plain",
            "application/javascript",
            "application/json",
            "application/xml",
            "application/x-www-form-urlencoded",
            "multipart/form-data",
            "image/jpeg",
            "image/png",
            "image/gif",
            "image/svg+xml",
            "image/webp",
            "font/woff",
            "font/woff2",
            "application/font-woff",
            "application/font-woff2"
        ]
    },
    "geo_blocking": {
        "enabled": false,
        "blocked_countries": [],
        "allowed_countries": []
    },
    "honeypot": {
        "enabled": false,
        "trap_urls": [
            "/admin/",
            "/administrator/",
            "/wp-admin/",
            "/phpmyadmin/",
            "/.env",
            "/config.php",
            "/wp-config.php"
        ]
    }
}